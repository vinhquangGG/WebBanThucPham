@model Du_An.ModelViews.XemDonHang
@{
    List<Du_An.Models.Product> listP = ViewBag.Productss;
}
<section class="h-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-10 col-xl-8">
        <div class="card" style="border-radius: 10px;">
          <div class="card-header px-4 py-5">
            <h5 class="text-muted mb-0">Cảm ơn bạn đã đặt hàng! <span style="color: #a8729a;"></span></h5>
          </div>
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="lead fw-normal mb-0" style="color: #a8729a;">Thông tin đơn hàng: @Model.DonHang.OrderId</p>
              <p class="small text-muted mb-0"></p>
            </div>
            @if(Model.ChiTietDonHang != null)
            {   
                foreach (var item in Model.ChiTietDonHang)
                {
                    <div class="card shadow-0 border mb-4">
                        <div class="card-body">
                            <div class="row">
                            @foreach (var p in listP)
                            {
                                if(p.ProductId == item.ProductId){
                                    <div class="col-md-2">
                                        <img src="~/images/products/@p.Thumb"
                                        class="img-fluid" alt="@Model.DonHang.Note">
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0">@p.ProductName</p>
                                    </div>
                                }
                            }    
                            
                            <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                <p class="text-muted mb-0 small">Số lượng: @item.Amount</p>
                            </div>
                            @if(@Model.DonHang.TransactStatusId == 1){
                                <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                    <p class="text-muted mb-0 small">Chờ lấy hàng</p>
                                </div>
                            }
                            
                            <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                <p class="text-muted mb-0 small">Đơn giá: @item.Price.Value.ToString("#,##0") VNĐ</p>
                            </div>
                            </div>
                            <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                            <div class="row d-flex align-items-center">
                            <div class="col-md-2">
                                <p class="text-muted mb-0 small">Đơn hàng: @item.OrderDetailId</p>
                            </div>
                            <div class="col-md-10">
                                <div class="progress" style="height: 6px; border-radius: 16px;">
                                <div class="progress-bar" role="progressbar"
                                    style="width: 65%; border-radius: 16px; background-color: #a8729a;" aria-valuenow="65"
                                    aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <div class="d-flex justify-content-around mb-1">
                                <p class="text-muted mt-1 mb-0 small ms-xl-5"></p>
                                <p class="text-muted mt-1 mb-0 small ms-xl-5"></p>
                                </div>
                            </div>
                            </div>
                        </div>
                        </div>
                            }
            }

            <div class="d-flex justify-content-between pt-2">
              <p class="fw-bold mb-0">CHI TIẾT ĐƠN HÀNG</p>
            </div>

            <div class="d-flex justify-content-between">
              <p class="text-muted mb-0">Ngày đặt hàng : @Model.DonHang.OrderDate</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">Ghi chú: </span> @Model.DonHang.Note</p>
            </div>

            <div class="d-flex justify-content-between mb-5">
              <p class="text-muted mb-0">Địa chỉ: @Model.DonHang.Customer.Address</p>
            </div>
          </div>
          <div class="card-footer border-0 px-4 py-5"
            style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
            <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Tổng Tiền
              : <span class="h2 mb-0 ms-2">@Model.DonHang.TotalMoney.ToString("#,##0") VNĐ</span></h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>