@model Du_An.Models.TinDang
@{
    ViewData["Title"] = Model.Title;
    Layout= "_Layout";
    string url = $"/tin-tuc/{Model.Alias}-{Model.PostId}.html";
    List<TinDang> lsTinDang = ViewBag.BaiVietLienQuan;
}
<main class="main-content">
            <div class="breadcrumb-area breadcrumb-height" data-bg-image="assets/images/breadcrumb/bg/1-1-1920x373.jpg">
                <div class="container h-100">
                    <div class="row h-100">
                        <div class="col-lg-12">
                            <div class="breadcrumb-item">
                                <h2 class="breadcrumb-heading">@Model.Title</h2>
                                <ul>
                                    <li>
                                        <a href="/">Trang chủ <i class="pe-7s-angle-right"></i></a>
                                    </li>
                                    <li>@Model.Title</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="blog-area section-space-y-axis-100">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="blog-detail-item">
                                <div class="blog-img">
                                    <img class="img-full" src="~/images/tinDangs/@Model.Thumb" alt="@Model.Title">
                                </div>
                                <div class="blog-content text-start pb-0">
                                    <div class="blog-meta text-dim-gray pb-3">
                                        <ul>
                                            <li class="date"><i class="fa fa-calendar-o me-2"></i>@Model.CreatedDate</li>
                                            <li>
                                                <span class="comments me-3">
                                                <a href="javascript:void(0)">2 Comments</a>
                                            </span>
                                                <span class="link-share">
                                                <a href="javascript:void(0)">Share</a>
                                            </span>
                                            </li>
                                        </ul>
                                    </div>
                                    <h5 class="title mb-4">
                                        <a href="@url">@Model.Title</a>
                                    </h5>
                                    <p class="short-desc mb-4 mb-7">@Model.Scontents</p>
                                    @Html.Raw(@Model.Contents)
                                    <div class="feedback-area section-space-top-55">
                                        <h4 class="heading mb-1">Bài viết liên quan</h4>
                                        <div class="widgets-item">
                                        <div class="swiper-container widgets-list-slider style-2">
                                            <div class="swiper-wrapper">
                                                @if(lsTinDang != null){
                                                    foreach (var item in lsTinDang)
                                                    {
                                                        string _url = $"/tin-tuc/{item.Alias}-{item.PostId}.html";
                                                         <div class="swiper-slide">
                                                            <div class="product-list-item">
                                                                <div class="product-img img-zoom-effect">
                                                                    <a href="@_url">
                                                                        <img class="img-full" src="~/images/tinDangs/@item.Thumb" alt="Blog Images">
                                                                    </a>
                                                                </div>
                                                                <div class="product-content">
                                                                    <h5 class="title mb-3">
                                                                        <a href="@_url">@item.Title</a>
                                                                    </h5>
                                                                    <div class="blog-meta text-manatee pb-1">
                                                                        <ul>
                                                                            <li class="date">@item.CreatedDate</li>
                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>