@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<Du_An.Models.Customer>
@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách khách hàng" + CurrentPage;
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i
                    class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Danh sách Khách hàng : page @CurrentPage</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    
                </div>
            </div>

        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Họ và tên</th>
                        <th>Địa chỉ</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CustomerId</td>
                                    <td>
                                        <p>@item.FullName</p>
                                        <p>@item.Phone</p>
                                        <p>@item.Email</p>
                                    </td>
                                    <td>@item.Address</td>
                                    <td>
                                        <a class="btn btn-primary btn-tone m-r-5" asp-controller="AdminCustomer" asp-action="Details"
                                    asp-route-id="@item.CustomerId">Xem</a>
                                        <a class="btn btn-secondary btn-tone m-r-5" asp-controller="AdminCustomer" asp-action="Edit"
                                    asp-route-id="@item.CustomerId">Sửa</a>
                                        <a class="btn btn-danger btn-tone m-r-5" asp-controller="AdminCustomer" asp-action="Delete"
                                    asp-route-id="@item.CustomerId">Xóa</a>
                                    </td>
                                </tr>
                            }
                        }

                </tbody>
            </table>
            <div aria-label="Page navigation example">
                <ul class="pagination">
                <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminCustomer"
                asp-action="Index"/>
                </ul>
            </div>
            @* <div id='Paging' style="text-align:center">  
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)  
                of @Model.PageCount  
        
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>   *@
        </div>
    </div>
</div>