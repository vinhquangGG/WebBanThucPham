@model Du_An.Models.Product

@{
    ViewData["Title"] = "Thông tin sản phẩm";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-controller="Home" asp-action="Index" asp class="breadcrumb-item"><i
                    class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-controller="AdminProduct" asp-action="Index">Danh sách sản phẩm</a>
            <span class="breadcrumb-item active">Thông tin sản phẩm: @Model.ProductName</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td>@Model.ProductId</td>
                    </tr>
                    <tr>
                        <td>Tên vai trò:</td>
                        <td>@Model.ProductName</td>
                    </tr>
                    <tr>
                        <td>Mô tả:</td>
                        <td> @Model.ShortDesc</td>
                    </tr>
                    <tr>
                        <td>Giá bản:</td>
                        <td> @Model.Price</td>
                    </tr>
                    <tr>
                        <td>Mô tả:</td>
                        <td>@Model.Description</td>
                    </tr>
                    <tr>
                        <td>Giá giảm:</td>
                        <td> @Model.Discount</td>
                    </tr>
                    <tr>
                        <td>Active:</td>

                        <td>
                            @if (Model.Active)
                            {
                                <div class="switch m-r-10">
                                    <input type="checkbox" id="switch-1" checked="" disabled>
                                    <label for="switch-1"></label>
                                </div>
                            }
                            else
                            {
                                <div class="switch m-r-10">
                                    <input type="checkbox" id="switch-2" disabled>
                                    <label for="switch-2"></label>
                                </div>
                            }

                        </td>
                    </tr>
                    <tr>
                        <td>BestSellers:</td>
                        <td> 
                            @if (Model.BestSellers)
                            {
                                <div class="switch m-r-10">
                                    <input type="checkbox" id="switch-1" checked="" disabled>
                                    <label for="switch-1"></label>
                                </div>
                            }
                            else
                            {
                                <div class="switch m-r-10">
                                    <input type="checkbox" id="switch-2" disabled>
                                    <label for="switch-2"></label>
                                </div>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>HomeFlag:</td>
                        <td> 
                            @if (Model.HomeFlag)
                            {
                                <div class="switch m-r-10">
                                    <input type="checkbox" id="switch-1" checked="" disabled>
                                    <label for="switch-1"></label>
                                </div>
                            }
                            else
                            {
                                <div class="switch m-r-10">
                                    <input type="checkbox" id="switch-2" disabled>
                                    <label for="switch-2"></label>
                                </div>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>Danh Mục:</td>
                        <td> @Model.Cat.CatName</td>
                    </tr>
                    <tr>
                        <td>Ngày tạo:</td>
                        <td> @Model.DateCreated</td>
                    </tr>
                    <tr>
                        <td>Ngày chỉnh sửa:</td>
                        <td> @Model.DateModified</td>
                    </tr>
                    <tr>
                        <td>Tiêu đề:</td>
                        <td> @Model.Title</td>
                    </tr>
                    <tr>
                        <td>MetaDesc:</td>
                        <td> @Model.MetaDesc</td>
                    </tr>
                    <tr>
                        <td>MetaKey:</td>
                        <td> @Model.MetaKey</td>
                    </tr>
                    <tr>
                        <td>Tag:</td>
                        <td> @Model.Tags</td>
                    </tr>
                    <tr>
                        <td>Alias:</td>
                        <td> @Model.Alias</td>
                    </tr>
                    <tr>
                        <td>Tồn kho:</td>
                        <td> @Model.UnitsInStock</td>
                    </tr>
                    <tr>
                        <td>Cat:</td>
                        <td> @Model.Cat</td>
                    </tr>
                    <tr>
                        <td>Ảnh đại diện:</td>
                        <td> <img width="200px" height="200px" src="~/images/products/@Model.Thumb" alt="@Model.Title">
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>