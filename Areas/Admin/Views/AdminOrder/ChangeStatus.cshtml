@model Du_An.Models.Order

@{
    ViewData["Title"] = "Thay đổi trạng thái đơn hàng";
    Layout = "_AdminLayout";
}
<div class="modal-header">
    <h5 class="modal-title">THÔNG TIN ĐƠN HÀNG</h5>
    <button type="button" data-dismiss = "modal" aria-label="Close" class="close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"></h4>
            <div class="table-responsive">
                <table class="product-info-table m-t-20">
                    <tbody>
                        <tr>
                            <td>ID:</td>
                            <td class="text-dark font-weight-semibold">@Model.OrderId</td>
                        </tr>
                        <tr>
                            <td>Ngày mua hàng:</td>
                            <td class="text-dark font-weight-semibold">@Model.OrderDate</td>
                        </tr>
                        <tr>
                            <td>Khách hàng:</td>
                            <td class="text-dark font-weight-semibold">@Model.Customer.FullName</td>
                        </tr>
                        <tr>
                            <td>Số điện thoại:</td>
                            <td class="text-dark font-weight-semibold">@Model.Customer.Phone</td>
                        </tr>
                        <tr>
                            <td>Địa chỉ:</td>
                            <td class="text-dark font-weight-semibold">@Model.Address</td>
                        </tr>
                        <tr>
                            <td>Tổng tiền:</td>
                            <td class="text-dark font-weight-semibold">@Model.TotalMoney.ToString("#,##0") VNĐ</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <form asp-area="Admin" asp-controller="AdminOrder" asp-action="ChangeStatus" asp-route-id="@Model.OrderId" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="OrderId">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Chọn trạng thái đơn hàng</label>
                            <select asp-for="TransactStatusId" asp-items="@ViewBag.TrangThai" class="form-control">
                                <option value="0" disabled selected>Chọn trạng thái đơn hàng</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label >Đã thanh toán</label>
                    <input asp-for = "Paid" type="checkbox">
                    <span asp-validation-for="Paid" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label >Đơn hàng bị hủy</label>
                    <input asp-for = "Deleted" type="checkbox">
                    <span asp-validation-for="Deleted" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success">Lưu thay đổi</button>
            </form>

        </div>
    </div>
</div>
