@model Du_An.Models.Account

@{
    ViewData["Title"] = "Tạo mới tài khoản quản trị";
}
<div class="card">
    <div class="card-body">
        <h4>TẠO MỚI TÀI KHOẢN QUẢN TRỊ</h4>
        <div class="m-t-25" style="max-width: 700px;">
            <form asp-controller="AdminAccount" asp-action="Create" method="post">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputEmail4">Họ và tên</label>
                        <input type="text" asp-for="FullName" class="form-control" id="inputEmail4" placeholder="Email">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">Số điện thoại</label>
                        <input type="text" asp-for="Phone"  class="form-control" id="inputPassword4" placeholder="Password">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputEmail4">Email</label>
                        <input type="text" asp-for="Email" class="form-control" id="inputEmail4" placeholder="Email">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">Quyền truy cập</label>
                        <select asp-for="RoleId" asp-items="@ViewBag.QuyenTruyCap" class="form-control">
                                <option value="0" disabled selected>Quyền truy cập</option>
                            </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <input asp-for="Active" type="checkbox">
                        <label for="Active">Active</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Tạo mới tài khoản</button>
            </form>
        </div>

    </div>
</div>
